@model HTSV.FE.Models.TinTuc.TinTucViewModel
@{
    ViewData["Title"] = Model.TieuDe;
    string Admin = Context.Session.GetString("Role") == "Admin" ? "Admin" : "Member";
    if (User.IsInRole(Admin))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<div class="max-w-6xl mx-auto px-4 py-8">
    <!-- Breadcrumb -->
    <nav class="flex mb-8" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
                <a href="/" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-primary">
                    <svg class="w-3 h-3 mr-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                        <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
                    </svg>
                    Trang chủ
                </a>
            </li>
            <li>
                <div class="flex items-center">
                    <svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                    </svg>
                    <a href="/TinTuc" class="ml-1 text-sm font-medium text-gray-700 hover:text-primary md:ml-2">Tin tức</a>
                </div>
            </li>
            <li aria-current="page">
                <div class="flex items-center">
                    <svg class="w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                    </svg>
                    <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">Chi tiết</span>
                </div>
            </li>
        </ol>
    </nav>

    <!-- Article header -->
    <header class="mb-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">@Model.TieuDe</h1>
        <div class="flex items-center text-gray-600 text-sm mb-4">
            <span class="mr-4">
                <svg class="w-4 h-4 inline-block mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                </svg>
                @Model.TenNguoiDangTin
            </span>
            <span>
                <svg class="w-4 h-4 inline-block mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                </svg>
                @Model.NgayDang.ToString("dd/MM/yyyy HH:mm")
            </span>
        </div>
        @if (!string.IsNullOrEmpty(Model.AnhBia))
        {
            <img src="@Model.AnhBia" alt="@Model.TieuDe" class="w-full h-[500px] object-cover rounded-lg shadow-lg mb-8">
        }
        @if (!string.IsNullOrEmpty(Model.TomTat))
        {
            <div class="bg-gray-50 border-l-4 border-primary p-6 mb-8">
                <p class="text-gray-700 italic text-lg">@Model.TomTat</p>
            </div>
        }
    </header>

    <!-- Article content -->
    <article class="prose prose-lg max-w-none mb-8">
        @Html.Raw(Model.NoiDung)
    </article>

    <!-- File attachment -->
    @if (!string.IsNullOrEmpty(Model.FileDinhKem))
    {
        <div class="bg-gray-50 rounded-lg p-6 mb-8">
            <h3 class="font-semibold text-gray-900 mb-2">Tài liệu đính kèm</h3>
            <a href="@Model.FileDinhKem" class="inline-flex items-center text-primary hover:underline">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
                Tải xuống tài liệu
            </a>
        </div>
    }
</div> 